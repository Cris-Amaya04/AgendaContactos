@model AgendaContactos.Models.Contacto

@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4>Nuevo Contacto</h4>
            </div>
            <div class="panel-body">
                <form action="@Url.Action("Crear", "Contacto") "method="post">
                    @*Al ser un formulario que enviará datos, se utilizará el método post referenciado del método Crear*@
                    <div class="form-group">
                        <label>Nombres</label>
                        <input type="text" class="form-control" name="Nombre" />
                    </div>
                    <div class="form-group">
                        <label>Apellidos</label>
                        <input type="text" class="form-control" name="Apellido" />
                    </div>
                    <div class="form-group">
                        <label>Telefono</label>
                        <input type="text" class="form-control" name="Telefono" />
                    </div>
                    <div class="form-group">
                        <label>Correo</label>
                        <input type="text" class="form-control" name="Correo" />
                    </div>
                    <br />
                    <button class="btn btn-primary" type="submit">Registrar</button>
                    <a href="@Url.Action("Inicio", "Contacto")" class="btn btn-warning">Regresar</a>
                </form>
            </div>
        </div>
    </div>
</div>

